<Button x:Class="MissMooseConfigurationApplication.PageSwitcherButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MissMooseConfigurationApplication"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Click="PageSwitcherButtonClick"
             Margin="8"
             BorderThickness="0"
             Foreground="{DynamicResource ThemeBrushText}"
             FontSize="14" FontWeight="Bold"
             Style="{DynamicResource MouseoverButtonStyle}">
    <Button.Effect>
        <DropShadowEffect ShadowDepth="1" BlurRadius="5" Direction="320"/>
    </Button.Effect>    
</Button>
