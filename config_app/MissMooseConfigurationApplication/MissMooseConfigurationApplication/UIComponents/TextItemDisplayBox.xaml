<DockPanel x:Class="MissMooseConfigurationApplication.UIComponents.TextItemDisplayBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MissMooseConfigurationApplication"
             mc:Ignorable="d" 
             Margin="4">
    <!-- this invisble border forces the textblock to occupy the entire grid cell while keeping the text centered -->
    <Border DockPanel.Dock="Top" Background="{DynamicResource ThemeBrushForeground}" BorderThickness="0">
        <TextBlock Name="TitleText" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource ThemeBrushText}" FontSize="14"></TextBlock>
    </Border>
    <ListBox Name="TextList" DockPanel.Dock="Top" Background="{DynamicResource ThemeBrushBackground}" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch"/>
</DockPanel>
