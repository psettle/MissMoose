<Page x:Class="MissMooseConfigurationApplication.SystemOverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MissMooseConfigurationApplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SystemOverviewPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="400"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#2e2e2e">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Border BorderThickness="0,4,0,0" BorderBrush="Yellow" Grid.Row="0"></Border>
            <Line Margin="0,2,0,0" Stroke="White" StrokeThickness="4" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}" StrokeDashArray="10 8"></Line>
            <TextBlock Text="Direction of Traffic &#x2794;" Grid.RowSpan="2" Foreground="DeepSkyBlue" FontWeight="Bold" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4" Padding="4" Background="#2e2e2e"/>
        </Grid>
        <Grid Grid.Column="1" Grid.RowSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*"></RowDefinition>
                    <RowDefinition Height="4*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                </Grid.RowDefinitions>
                <local:PageSwitcherTextbox Grid.Row="0" Title="Event Log"></local:PageSwitcherTextbox>
                <local:PageSwitcherTextbox Grid.Row="1" Title="System Problems"></local:PageSwitcherTextbox>
                <local:PageSwitcherNumberBox Grid.Row="2" Title="Detections Past Hour"></local:PageSwitcherNumberBox>
            </Grid>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="1">

            <!--<Polygon Points="50,50 50,200 250,200 250,50" Fill="LightBlue"/>
            <Polygon Points="250,50 250,200 450,200 450,50" Fill="LightBlue"/>
            <Polygon Points="50,200 50,350 250,350 250,200" Fill="LightBlue"/>
            <Polygon Points="250,200 250,350 450,350 450,200" Fill="LightBlue"/>
            
            ^^ P: A quick attempt at region fills, it looks gross and doesn't really match our sensors at this point, so I'm leaving it out.
            -->

            <Line Name="Line_0_0_Down" X1="50" Y1="50" X2="50" Y2="125" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_0_1_Up"   X1="50" Y1="125" X2="50" Y2="200" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_0_1_Down" X1="50" Y1="200" X2="50" Y2="275" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_0_2_Up"   X1="50" Y1="275" X2="50" Y2="350" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>

            <Line Name="Line_1_0_Down" X1="250" Y1="50" X2="250" Y2="125" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_1_1_Up"   X1="250" Y1="125" X2="250" Y2="200" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_1_1_Down" X1="250" Y1="200" X2="250" Y2="275" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_1_2_Up"   X1="250" Y1="275" X2="250" Y2="350" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>

            <Line Name="Line_2_0_Down" X1="450" Y1="50" X2="450" Y2="125" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_2_1_Up"   X1="450" Y1="125" X2="450" Y2="200" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_2_1_Down" X1="450" Y1="200" X2="450" Y2="275" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_2_2_Up"   X1="450" Y1="275" X2="450" Y2="350" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>

            <Line Name="Line_0_0_Right" X1="50" Y1="50" X2="150" Y2="50" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_1_0_Left"  X1="150" Y1="50" X2="250" Y2="50" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_1_0_Right" X1="250" Y1="50" X2="350" Y2="50" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_2_0_Left"  X1="350" Y1="50" X2="450" Y2="50" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>

            <Line Name="Line_0_1_Right" X1="50" Y1="200" X2="150" Y2="200" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_1_1_Left"  X1="150" Y1="200" X2="250" Y2="200" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_1_1_Right" X1="250" Y1="200" X2="350" Y2="200" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_2_1_Left"  X1="350" Y1="200" X2="450" Y2="200" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>

            <Line Name="Line_0_2_Right" X1="50" Y1="350" X2="150" Y2="350" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_1_2_Left"  X1="150" Y1="350" X2="250" Y2="350" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_1_2_Right" X1="250" Y1="350" X2="350" Y2="350" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>
            <Line Name="Line_2_2_Left"  X1="350" Y1="350" X2="450" Y2="350" Stroke="Black" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Hidden"/>

            <Viewbox Name="SensorViewbox_0_0" Width="100" Height="100" Stretch="Fill" Margin="0,0,400,300">
                <Viewbox.RenderTransform>
                    <RotateTransform Angle="0" CenterX="50" CenterY="50"/>
                </Viewbox.RenderTransform>
            </Viewbox>
            <Viewbox Name="SensorViewbox_0_1" Width="100" Height="100" Stretch="Fill" Margin="0,150,400,150">
                <Viewbox.RenderTransform>
                    <RotateTransform Angle="0" CenterX="50" CenterY="50"/>
                </Viewbox.RenderTransform>
            </Viewbox>
            <Viewbox Name="SensorViewbox_0_2" Width="100" Height="100" Stretch="Fill" Margin="0,300,400,0">
                <Viewbox.RenderTransform>
                    <RotateTransform Angle="0" CenterX="50" CenterY="50"/>
                </Viewbox.RenderTransform>
            </Viewbox>

            <Viewbox Name="SensorViewbox_1_0" Width="100" Height="100" Stretch="Fill" Margin="200,0,200,300">
                <Viewbox.RenderTransform>
                    <RotateTransform Angle="0" CenterX="50" CenterY="50"/>
                </Viewbox.RenderTransform>
            </Viewbox>
            <Viewbox Name="SensorViewbox_1_1" Width="100" Height="100" Stretch="Fill" Margin="200,150,200,150">
                <Viewbox.RenderTransform>
                    <RotateTransform Angle="0" CenterX="50" CenterY="50"/>
                </Viewbox.RenderTransform>
            </Viewbox>
            <Viewbox Name="SensorViewbox_1_2" Width="100" Height="100" Stretch="Fill" Margin="200,300,200,0">
                <Viewbox.RenderTransform>
                    <RotateTransform Angle="0" CenterX="50" CenterY="50"/>
                </Viewbox.RenderTransform>
            </Viewbox>

            <Viewbox Name="SensorViewbox_2_0" Width="100" Height="100" Stretch="Fill" Margin="400,0,0,300">
                <Viewbox.RenderTransform>
                    <RotateTransform Angle="0" CenterX="50" CenterY="50"/>
                </Viewbox.RenderTransform>
            </Viewbox>
            <Viewbox Name="SensorViewbox_2_1" Width="100" Height="100" Stretch="Fill" Margin="400,150,0,150">
                <Viewbox.RenderTransform>
                    <RotateTransform Angle="0" CenterX="50" CenterY="50"/>
                </Viewbox.RenderTransform>
            </Viewbox>
            <Viewbox Name="SensorViewbox_2_2" Width="100" Height="100" Stretch="Fill" Margin="400,300,0,0">
                <Viewbox.RenderTransform>
                    <RotateTransform Angle="0" CenterX="50" CenterY="50"/>
                </Viewbox.RenderTransform>
            </Viewbox>
        </Grid>
    </Grid>
</Page>
