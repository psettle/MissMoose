<Page x:Class="MissMooseConfigurationApplication.SystemOverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MissMooseConfigurationApplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SystemOverviewPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0">This is SystemOverviewPage</Label>
        <Grid Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*"></RowDefinition>
                    <RowDefinition Height="4*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                </Grid.RowDefinitions>
                <local:PageSwitcherTextbox Grid.Row="0" Title="Event Log"></local:PageSwitcherTextbox>
                <local:PageSwitcherTextbox Grid.Row="1" Title="System Problems"></local:PageSwitcherTextbox>
                <local:PageSwitcherNumberBox Grid.Row="2" Title="Detections Past Hour"></local:PageSwitcherNumberBox>
            </Grid>
        </Grid>
    </Grid>
</Page>
