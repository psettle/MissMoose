<Page x:Class="MissMooseConfigurationApplication.UIPages.ConfigurationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MissMooseConfigurationApplication.UIPages"
      xmlns:missmooseconfigurationapplication="clr-namespace:MissMooseConfigurationApplication"
      xmlns:uicomponents="clr-namespace:MissMooseConfigurationApplication.UIComponents"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfigurationPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Viewbox Margin="20,140">
                <Grid>
                    <Rectangle Stroke="Black" Height="150"/>
                    <Viewbox Name="NewSensorViewbox" Width="100" Height="100" Stretch="Fill">
                        <Viewbox.RenderTransform>
                            <RotateTransform Angle="0" CenterX="50" CenterY="50"/>
                        </Viewbox.RenderTransform>
                    </Viewbox>
                    <Label Name="NewNodeLabel" Content="Unconfigured Node" VerticalAlignment="Top" HorizontalContentAlignment="Center" Width="125"/>
                </Grid>
            </Viewbox>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1">
            <Viewbox>
                <uicomponents:ConfigurationGrid x:Name="ConfigGrid"/>
            </Viewbox>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="2">
            <Viewbox>
                <Grid Margin="20,0,20,0">
                    <Rectangle Stroke="Black" Fill="DarkGray" Height="180" Width="125"/>

                    <Label Name="NodeNameLabel" Content="Node X" Foreground="White" VerticalAlignment="Top" HorizontalContentAlignment="Center" Width="125"/>

                    <Viewbox Name="Up" Width="30" Height="40" Stretch="Fill" Margin="0,15,0,0">
                        <missmooseconfigurationapplication:ArrowButton x:Name="UpButton"/>
                    </Viewbox>

                    <Viewbox Name="Right" Width="30" Height="40"  Stretch="Fill" Margin="65,78,0,0">
                        <missmooseconfigurationapplication:ArrowButton x:Name="RightButton"/>
                        <Viewbox.RenderTransform>
                            <RotateTransform Angle="90" CenterX="15" CenterY="20"/>
                        </Viewbox.RenderTransform>
                    </Viewbox>

                    <Viewbox Name="Down" Width="30" Height="40"  Stretch="Fill" Margin="0,140,0,0">
                        <missmooseconfigurationapplication:ArrowButton x:Name="DownButton"/>
                        <Viewbox.RenderTransform>
                            <RotateTransform Angle="180" CenterX="15" CenterY="20"/>
                        </Viewbox.RenderTransform>
                    </Viewbox>

                    <Viewbox Name="Left" Width="30" Height="40"  Stretch="Fill" Margin="-65,78,0,0">
                        <missmooseconfigurationapplication:ArrowButton x:Name="LeftButton"/>
                        <Viewbox.RenderTransform>
                            <RotateTransform Angle="270" CenterX="15" CenterY="20"/>
                        </Viewbox.RenderTransform>
                    </Viewbox>

                    <Viewbox Name="RotateClockwise" Width="50" Height="50" Stretch="Fill" Margin="65,-35,0,0">
                        <missmooseconfigurationapplication:CurvedArrowButton x:Name="ClockwiseButton"/>
                        <Viewbox.RenderTransform>
                            <RotateTransform Angle="90" CenterX="25" CenterY="25"/>
                        </Viewbox.RenderTransform>
                    </Viewbox>

                    <Viewbox Name="RotateCounterClockwise" Width="50" Height="50" Stretch="Fill" Margin="40,-35,0,0">
                        <missmooseconfigurationapplication:CurvedArrowButton x:Name="CounterClockwiseButton"/>
                        <Viewbox.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="90" CenterX="25" CenterY="25"/>
                                <ScaleTransform ScaleX="-1" />
                            </TransformGroup>
                        </Viewbox.RenderTransform>
                    </Viewbox>
                </Grid>
            </Viewbox>
        </Grid>
    </Grid>
</Page>
