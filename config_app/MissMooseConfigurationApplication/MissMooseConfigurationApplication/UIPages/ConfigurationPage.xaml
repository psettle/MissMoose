<Page x:Class="MissMooseConfigurationApplication.UIPages.ConfigurationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MissMooseConfigurationApplication.UIPages"
      xmlns:missmooseconfigurationapplication="clr-namespace:MissMooseConfigurationApplication"
      xmlns:uicomponents="clr-namespace:MissMooseConfigurationApplication.UIComponents"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfigurationPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="12*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="3" Background="#2e2e2e">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Border BorderThickness="0,4,0,0" BorderBrush="Yellow" Grid.Row="0"></Border>
            <Line Margin="0,2,0,0" Stroke="White" StrokeThickness="4" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}" StrokeDashArray="10 8"></Line>
            <TextBlock Text="Direction of Traffic &#x2794;" Grid.RowSpan="2" Foreground="DeepSkyBlue" FontWeight="Bold" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4" Padding="4" Background="#2e2e2e"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0">
            <Viewbox>
                <Grid Margin="20,0,20,0">
                    <Rectangle Stroke="Black" Fill="DarkGray" Height="180" Width="125"/>
                    <Viewbox Name="NewSensorViewbox" Width="100" Height="100" Stretch="Fill" Margin="0,40,0,20">
                        <Viewbox.RenderTransform>
                            <RotateTransform Angle="0" CenterX="50" CenterY="50"/>
                        </Viewbox.RenderTransform>
                    </Viewbox>
                    <Label Name="NewNodeLabel" Foreground="White" Content="New Node!" VerticalAlignment="Top" HorizontalContentAlignment="Center" Width="125" FontSize="18"/>
                </Grid>
            </Viewbox>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Viewbox>
                <uicomponents:ConfigurationGrid x:Name="ConfigGrid"/>
            </Viewbox>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="2">
            <Viewbox>
                <Grid Margin="20,0,20,0">
                    <Rectangle Stroke="Black" Fill="DarkGray" Height="180" Width="125"/>

                    <Label Name="NodeNameLabel" Content="Node X" Foreground="White" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="18" Width="125"/>

                    <Viewbox Name="Up" Width="30" Height="40" Stretch="Fill" Margin="0,15,0,0">
                        <missmooseconfigurationapplication:ArrowButton x:Name="UpButton"/>
                    </Viewbox>

                    <Viewbox Name="Right" Width="30" Height="40"  Stretch="Fill" Margin="65,78,0,0">
                        <missmooseconfigurationapplication:ArrowButton x:Name="RightButton"/>
                        <Viewbox.RenderTransform>
                            <RotateTransform Angle="90" CenterX="15" CenterY="20"/>
                        </Viewbox.RenderTransform>
                    </Viewbox>

                    <Viewbox Name="Down" Width="30" Height="40"  Stretch="Fill" Margin="0,140,0,0">
                        <missmooseconfigurationapplication:ArrowButton x:Name="DownButton"/>
                        <Viewbox.RenderTransform>
                            <RotateTransform Angle="180" CenterX="15" CenterY="20"/>
                        </Viewbox.RenderTransform>
                    </Viewbox>

                    <Viewbox Name="Left" Width="30" Height="40"  Stretch="Fill" Margin="-65,78,0,0">
                        <missmooseconfigurationapplication:ArrowButton x:Name="LeftButton"/>
                        <Viewbox.RenderTransform>
                            <RotateTransform Angle="270" CenterX="15" CenterY="20"/>
                        </Viewbox.RenderTransform>
                    </Viewbox>

                    <Viewbox Name="RotateClockwise" Width="50" Height="50" Stretch="Fill" Margin="65,-35,0,0">
                        <missmooseconfigurationapplication:CurvedArrowButton x:Name="ClockwiseButton"/>
                        <Viewbox.RenderTransform>
                            <RotateTransform Angle="90" CenterX="25" CenterY="25"/>
                        </Viewbox.RenderTransform>
                    </Viewbox>

                    <Viewbox Name="RotateCounterClockwise" Width="50" Height="50" Stretch="Fill" Margin="40,-35,0,0">
                        <missmooseconfigurationapplication:CurvedArrowButton x:Name="CounterClockwiseButton"/>
                        <Viewbox.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="90" CenterX="25" CenterY="25"/>
                                <ScaleTransform ScaleX="-1" />
                            </TransformGroup>
                        </Viewbox.RenderTransform>
                    </Viewbox>
                </Grid>
            </Viewbox>
        </Grid>
    </Grid>
</Page>
